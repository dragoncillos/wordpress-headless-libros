---
interface Props {
  title: string
  excerpt: string
  content: string
  date: string
  slug: string
  featuredImage: string
}

const { title, excerpt, content, date, slug, featuredImage } = Astro.props
---

<article
  class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105"
>
  <img src={featuredImage} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h2 class="text-xl font-bold mb-2">
      <a href={`/post/${slug}`}>{title}</a>
    </h2>
    <p class="text-gray-600 text-sm mb-4">{date}</p>
    <p class="text-gray-700" set:html={excerpt} />
  </div>
</article>
